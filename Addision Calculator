# Function to get user input safely and convert to float
def get_input(prompt):
    while True:
        try:
            value = input(prompt)
            # Convert the input to a float
            return float(value)
        except ValueError:
            print("Invalid input! Please enter a valid number.")

# Function to add two numbers
def add_numbers(x, y):
    return x + y

# Function to validate the sum using a mathematical check (just as an example of extra use of operators)
def validate_sum(x, y, result):
    # Adding x and y and checking if the result matches (extra operator use)
    if result == x + y:
        return True
    return False

# Function to display the result in different formats
def display_result(result):
    print(f"Result of the addition: {result}")
    print(f"Result as integer: {int(result)}")
    print(f"Result as rounded: {round(result, 2)}")

# Main function
def main():
    print("Welcome to the addition program!")
    
    # Ask user for two numbers
    num1 = get_input("Enter the first number: ")
    num2 = get_input("Enter the second number: ")

    # Perform the addition
    sum_result = add_numbers(num1, num2)

    # Validate and display result
    if validate_sum(num1, num2, sum_result):
        print("The sum is correctly calculated!")
    else:
        print("Something went wrong with the sum calculation.")
    
    # Display the result in different formats
    display_result(sum_result)

# Run the program
if __name__ == "__main__":
    main()
